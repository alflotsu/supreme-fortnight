<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography definitions for Stitch Design System -->
    <style name="TextHeadline1">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/spline_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">36sp</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>
    
    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/spline_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    
    <style name="TextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/spline_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">20sp</item>
    </style>
    
    <style name="TextSmallBold">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/spline_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">20sp</item>
    </style>
</resources>
